{
  "name": "ts-electron-react-starter",
  "version": "1.0.0",
  "description": "Basic template to creating electron app with react and typescript",
  "main": "./dist/app.js",
  "scripts": {
    "start": "run-p compile nodemon",
    "compile": "tsc src/app.ts -w --outDir dist",
    "nodemon": "cross-env NODE_ENV=development nodemon --exec \"wait-on http://localhost:3000 && electron .\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^9.1.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.9.7",
    "wait-on": "^5.1.0"
  }
}
